<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.LoginController"
           stylesheets="@../css/app.css"
           styleClass="bg">

    <StackPane styleClass="center-wrap">
        <padding>
            <Insets top="32" right="32" bottom="32" left="32"/>
        </padding>

        <HBox fx:id="card" styleClass="login-card" spacing="0" maxWidth="980" maxHeight="560">

            <StackPane styleClass="left-panel" minWidth="420" prefWidth="420">
                <VBox styleClass="left-panel-content" spacing="10" alignment="CENTER_LEFT" fillWidth="true">

                    <Label text="Добро пожаловать"
                           styleClass="left-title left-center"
                           style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: 900; -fx-text-alignment: left;"/>

                    <Label text="Войдите в аккаунт, чтобы продолжить"
                           styleClass="left-subtitle left-center"
                           wrapText="true"
                           style="-fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: 700; -fx-text-alignment: left;"/>

                </VBox>
            </StackPane>

            <VBox styleClass="right-panel" spacing="14">
                <Label text="Авторизация" styleClass="form-title"/>
                <Label fx:id="errorLabel" text="" managed="false" visible="false" styleClass="error-label"/>

                <VBox spacing="10">
                    <HBox styleClass="input-row" spacing="10" alignment="CENTER_LEFT">
                        <Label text="Логин" styleClass="field-label"/>
                        <TextField fx:id="usernameField" promptText="Введите логин" styleClass="text-input"/>
                    </HBox>

                    <HBox styleClass="input-row" spacing="10" alignment="CENTER_LEFT">
                        <Label text="Пароль" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Введите пароль" styleClass="text-input"/>
                    </HBox>

                    <Label fx:id="capsHintLabel"
                           text="Caps Lock включён"
                           managed="false"
                           visible="false"
                           styleClass="caps-hint"/>
                </VBox>

                <HBox spacing="10" styleClass="buttons-row" alignment="CENTER_LEFT">
                    <Button fx:id="loginButton"
                            text="Войти"
                            onAction="#onLogin"
                            styleClass="btn-primary"/>

                    <Button fx:id="registerButton"
                            text="Зарегистрироваться"
                            onAction="#onRegister"
                            styleClass="btn-secondary"/>

                    <Button fx:id="githubButton"
                            text="GitHub"
                            onAction="#onOpenGithub"
                            styleClass="btn-github">
                        <graphic>
                            <ImageView fitWidth="16" fitHeight="16" preserveRatio="true">
                                <image>
                                    <Image url="@../icons/github-mark-white.png"/>
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </HBox>

                <ProgressIndicator fx:id="progress"
                                   managed="false"
                                   visible="false"
                                   styleClass="progress"/>
            </VBox>

        </HBox>
    </StackPane>
</StackPane>